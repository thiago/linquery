{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": false,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "sourceMap": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "baseUrl": "src"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "tests"]
}